<% if notice %>
<p id="notice" ><%= notice %></p>
<% end %>
<h1>My Catalog</h1>
<% @products.each do |product| %>
<div class="entry" >
<%= image_tag(product.imageurl, :size => "120x150") %>
<h3><%= product.title %></h3>
<%=sanitize product.description %>
<div class="price_line" >
<span class="price" ><%= product.price.round(2) %></span>
<%= button_to 'add to cart', line_items_path(:product_id=>product) %>
</div>
</div>
<% end %>